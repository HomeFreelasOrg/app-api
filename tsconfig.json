{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES2019",
    "baseUrl": "src",
    "esModuleInterop": true,
    "allowJs": true,
    "rootDirs": ["src", "tests"],
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
    }
  },
  "include": [
    "src",
    "tests"
  ]
}
